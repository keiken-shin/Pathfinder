{
  "compilerOptions": {
    "target": "es6",                        
    "module": "es2015",                     
    "sourceMap": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "baseUrl": "src",                     
    "paths": {
      "@/*": ["*"],
    },
    "esModuleInterop": true,                  
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts", "src/**/*.json", ".env"],
  "exclude": ["node_modules"]
}
